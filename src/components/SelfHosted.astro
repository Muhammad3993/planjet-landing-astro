---
const { t } = Astro.props;
---

<section class='pt-[200px]' id='self-hosted' data-aos='fade-up'>
  <div class='containeer'>
    <h1
      class='font-sfpro font-semibold text-56 leading-67 text-center text-white max-md:text-4xl'
    >
      Self-hosted
    </h1>
    <h4
      class='text-white text-center text-2xl font-sfpro font-normal mt-4 max-md:text-xl'
    >
      {t.Selfhosted.subtitle}
    </h4>
    <div class='flex flex-wrap gap-6 mt-28 max-md:mt-10'>
      <div
        class='p-12 bg-custom_gray rounded-35 border-y-1 border-x-4 border-custom_gray12 shadow-custom-2 backdrop-blur-125 flex-1 min-w-[406px] max-xsl:min-w-[300px]'
      >
        <div class='flex gap-4'>
          <div>
            <div
              class='w-10 h-10 flex items-center justify-center bg-custom_gray35 rounded-xl border-2 border-custom_gray12 relative top-[4px] max-md:w-7 max-md:h-7 max-md:rounded-lg max-md:top-[3px]'
            >
              <img
                src="../assets/images/coin.svg"
                alt=''
                width={24}
                height={24}
                class='max-md:w-4 max-md:h-4'
                loading={"lazy"}
              />
            </div>
          </div>
          <h3
            class='font-sfpro text-32 font-semibold text-white max-md:text-22'
          >
            {t.Selfhosted.data_control}
          </h3>
        </div>
        <h4
          class='text-17 font-sfpro text-white font-normal mt-3 max-md:text-15'
        >
          {t.Selfhosted.data_subtitle}
        </h4>
      </div>
      <div
        class='p-12 bg-custom_gray rounded-35 border-y-1 border-x-4 border-custom_gray12 shadow-custom-2 backdrop-blur-125 flex-1 min-w-[406px] max-xsl:min-w-[300px]'
      >
        <div class='flex gap-4'>
          <div>
            <div
              class='w-10 h-10 flex items-center justify-center bg-custom_gray35 rounded-xl border-2 border-custom_gray12 relative top-[4px] max-md:w-7 max-md:h-7 max-md:rounded-lg max-md:top-[3px]'
            >
              <img
                src="../assets/images/code.svg"
                alt=''
                width={24}
                height={24}
                class='max-md:w-4 max-md:h-4'
                loading={"lazy"}
              />
            </div>
          </div>
          <h3
            class='font-sfpro text-32 font-semibold text-white max-md:text-22'
          >
            {t.Selfhosted.customizability}
          </h3>
        </div>
        <h4
          class='text-17 font-sfpro text-white font-normal mt-3 max-md:text-15'
        >
          {t.Selfhosted.customizability_title}
        </h4>
      </div>
      <div
        class='p-12 bg-custom_gray rounded-35 border-y-1 border-x-4 border-custom_gray12 shadow-custom-2 backdrop-blur-125 flex-1 min-w-[406px] max-xsl:min-w-[300px]'
      >
        <div class='flex gap-4'>
          <div>
            <div
              class='w-10 h-10 flex items-center justify-center bg-custom_gray35 rounded-xl border-2 border-custom_gray12 relative top-[4px] max-md:w-7 max-md:h-7 max-md:rounded-lg max-md:top-[3px]'
            >
              <img
                src="../assets/images/cube.svg"
                alt=''
                width={24}
                height={24}
                class='max-md:w-4 max-md:h-4'
                loading={"lazy"}
              />
            </div>
          </div>
          <h3
            class='font-sfpro text-32 font-semibold text-white max-md:text-22'
          >
            {t.Selfhosted.independence}
          </h3>
        </div>
        <h4
          class='text-17 font-sfpro text-white font-normal mt-3 max-md:text-15'
        >
          {t.Selfhosted.independence_title}
        </h4>
      </div>
    </div>
  </div>
</section>
