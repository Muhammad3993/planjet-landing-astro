---
const { t } = Astro.props;
---

<section
  id='about-project'
  data-aos='fade-up'
  data-aos-anchor-placement='top-bottom'
>
  <div class='containeer'>
    <div
      class='w-full h-[564px] bg-custom_gray rounded-72 border-x-6 border-custom_gray12 backdrop-blur-125 flex items-center justify-center max-md:h-auto max-md:flex-col max-sm:rounded-35 max-md:border-x-3'
    >
      <div class='w-[485]'>
        <img
          src="../assets/images/intagration.svg"
          alt='Integration'
          loading={"lazy"}
          class='w-[485px] h-[711px] max-sm:w-[295px] max-sm:h-[432px] max-md:mt-[-140px] max-sm:mt-[-90px]'
        />
      </div>
      <div
        class='w-[60%] flex flex-col gap-8 max-md:w-full max-md:py-8 max-md:px-6 max-md:gap-4 max-md:mt-[-40px]'
      >
        <h2
          class='text-56 font-semibold font-sfpro leading-67 text-white max-md:text-2xl'
        >
          {t.Integration.title}
        </h2>
        <div class='flex gap-3 w-[80%] max-md:w-full'>
          <div>
            <div
              class='w-[6px] h-[6px] rounded-full bg-white relative top-[12px]'
            >
            </div>
          </div>
          <h4
            class='font-normal text-white text-2xl font-sfpro max-md:text-15 max-md:leading-5'
          >
            {t.Integration.text}
          </h4>
        </div>
        <div class='flex gap-3 w-[80%] max-md:w-full'>
          <div>
            <div
              class='w-[6px] h-[6px] rounded-full bg-white relative top-[12px]'
            >
            </div>
          </div>
          <h4
            class='font-normal text-white text-2xl font-sfpro max-md:text-15 max-md:leading-5'
          >
            {t.Integration.text1}
          </h4>
        </div>
      </div>
    </div>
  </div>
</section>
